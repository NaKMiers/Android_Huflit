<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ThemeView">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        style="@style/AppTheme"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/thanh"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pinIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_weight="0.5"
            android:src="@drawable/hinhuser" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_weight="0.5"
            android:src="@drawable/verified" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_weight="0.5"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/gitIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_weight="0.5"
            android:src="@drawable/information" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="Select Themes: "
        android:textColor="@color/black"

        android:textSize="18dp" />

    <Button
        android:id="@+id/btnoption"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/btn_option"
        android:gravity="center_vertical"
        android:onClick="clickOptionTheme"
        android:text="OPTION THEME"
        android:textColor="@color/black"

        android:textSize="20dp" />

    <GridView
        android:id="@+id/themeLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />

</LinearLayout>