<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Tài khoản của tôi"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:text="Email: luuhonghuu530@gmail.com"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtusername"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="PHONE: 093663654"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thông tin chi tiết"
        android:textColor="#f44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtusername" />

    <View
        android:id="@+id/informationView"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/txtSurName"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="HỌ: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/informationView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/informationView"
        app:layout_constraintTop_toTopOf="@+id/informationView" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="TÊN: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/informationView"
        app:layout_constraintStart_toStartOf="@+id/informationView"
        app:layout_constraintTop_toBottomOf="@+id/txtSurName" />

    <TextView
        android:id="@+id/txtBirthday"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="NGÀY SINH: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/informationView"
        app:layout_constraintStart_toStartOf="@+id/informationView"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="ĐỊA CHỈ: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/informationView"
        app:layout_constraintStart_toStartOf="@+id/informationView"
        app:layout_constraintTop_toBottomOf="@+id/txtBirthday" />

    <TextView
        android:id="@+id/txtJob"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="NGHỀ NGHIỆP: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/informationView"
        app:layout_constraintStart_toStartOf="@+id/informationView"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

    <TextView
        android:id="@+id/txtChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="(Thay đổi)"
        android:textColor="#0C81B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtusername" />

    <ImageView
        android:id="@+id/mainAvatar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/boy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>