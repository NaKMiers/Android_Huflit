<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="21dp"
    android:gravity="center_horizontal"
    android:background="?attr/colorSecondaryVariant"
    tools:context=".ProfileView">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_view"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/themeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/theme" />

        <ImageView
            android:id="@+id/securityBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/secure" />

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/logout" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Tài khoản của tôi"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_marginBottom="12dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:id="@+id/thanhtext"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Thông tin chi tiết"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/editBtn"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="toProfileChange"
            android:text="(Thay đổi)"
            android:textColor="@color/blue"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/informationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/custom_view"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Họ tên: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fullnameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Email: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Username: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Birthday: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/birthdayTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Job: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jobTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Address: "
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/addressTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="..."
                android:textColorHint="?attr/colorPrimaryVariant"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="21dp">

        <ImageView
            android:id="@+id/imgDevinfo"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/owl" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="HUFLIT BIRD"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="21px"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/icon_tick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Đưa ra câu trả lời nhanh và chính xác"
            android:textColor="?attr/colorPrimaryVariant" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="21px"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/icon_tick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Đầy đủ tính năng"
            android:textColor="?attr/colorPrimaryVariant"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="21px"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/icon_tick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Thanh toán nhanh chóng"
            android:textColor="?attr/colorPrimaryVariant" />
    </LinearLayout>


</LinearLayout>