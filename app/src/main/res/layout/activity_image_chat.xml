<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="vertical"
    tools:context=".imageChat">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/menu_image">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:layout_marginLeft="25dp"
            android:src="@drawable/chat" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CHAT ACTIVITY"
            android:textColor="#FF9800"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="618dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="How can I help you today?"
            android:textSize="20sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/voicesearch" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edtImageChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edtcustom"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:hint="Nhập câu lệnh tại đây..."
                android:inputType="text"
                android:scrollbarAlwaysDrawHorizontalTrack="false" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonlogout"
                android:paddingLeft="15dp"
                android:src="@drawable/send" />
        </FrameLayout>


    </LinearLayout>


</LinearLayout>