<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">


    <View
        android:id="@+id/informationView"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:background="#9F9E9E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/plaintextcustom"
                android:drawableLeft="@drawable/search1"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Search"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:textSize="20sp" />
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/altsend" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgavatar"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/boy" />

            <TextView
                android:id="@+id/txtusername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Nameuser"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="New Chat"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/wallclock" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Lịch sử tìm kiếm"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/information" />

            <TextView
                android:id="@+id/txtSurName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Trợ giúp"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Cài đặt"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:text="Các trang Social khác"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">


            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/socialedit" />

            <ImageView
                android:id="@+id/fbIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fb"
                android:onClick="fbLink"
                />

            <ImageView
                android:id="@+id/insIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ins"
                android:onClick="insLink"
                />

            <ImageView
                android:id="@+id/twIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/tt"
                android:onClick="twLink"
                />

            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pin"
                android:onClick="pinLink"
                />

            <ImageView
                android:id="@+id/gitIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/git"
                android:onClick="gitLink"
                />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>