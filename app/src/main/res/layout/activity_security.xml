<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="21dp"
    android:gravity="center_horizontal"
    android:background="?attr/colorSecondaryVariant"
    tools:context=".Security">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_view"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/themeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/theme" />

        <ImageView
            android:id="@+id/securityBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/secure" />

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/logout" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Mật Khẩu Và Bảo Mật"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_marginBottom="21dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/odlPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edtprofile"
        android:hint="Mật khẩu cũ..."
        android:paddingHorizontal="20dp"
        android:inputType="textPassword"
        android:textColorHint="#ccc"
        android:layout_marginBottom="12dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/newPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edtprofile"
        android:hint="Mật khẩu mới..."
        android:paddingHorizontal="20dp"
        android:inputType="textPassword"
        android:textColorHint="#ccc"
        android:layout_marginBottom="12dp"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/reNewPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edtprofile"
        android:hint="Nhập lại mật khẩu mới..."
        android:paddingHorizontal="20dp"
        android:inputType="textPassword"
        android:textColorHint="#ccc"
        android:layout_marginBottom="12dp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:text="Lưu thay đổi"
        />
</LinearLayout>