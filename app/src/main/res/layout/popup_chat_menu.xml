<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <View
        android:id="@+id/informationView"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:background="#9F9E9E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondaryVariant"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgavatar"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/boy" />

            <TextView
                android:id="@+id/txtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:hint="Username"
                android:paddingLeft="5dp"
                android:textColor="#333"
                android:background="@null"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="toProfileView"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgChangetheme"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/theme" />

            <TextView
                android:id="@+id/txtChangetheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Change Theme"
                android:textColor="#333"
                android:background="@null"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDevinfo"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/information" />

            <TextView
                android:id="@+id/txtDevinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="DevInfo"
                android:textColor="#333"
                android:background="@null"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAdmin"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/admin" />

            <TextView
                android:id="@+id/txtAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:text="Admin"
                android:textColor="#333"
                android:background="@null"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonlogout"
            android:text="Log out"
            android:textColor="?attr/colorPrimaryVariant"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:onClick="logOutUser"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:text="Các trang Social khác"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center"
            android:background="@drawable/socialedit">

            <ImageView
                android:id="@+id/fbIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toFb"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/insIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toIns"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ins" />

            <ImageView
                android:id="@+id/twIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toTw"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/tt" />

            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toPin"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/pin" />

            <ImageView
                android:id="@+id/gitIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toGit"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/git" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
